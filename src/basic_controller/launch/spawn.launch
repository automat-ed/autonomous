<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- start Webots -->
    <arg name="no-gui" default="false," doc="Start Webots with minimal GUI"/>
    <include file="$(find basic_controller)/launch/webots.launch">
        <arg name="mode" value="realtime"/>
        <arg name="no-gui" value="$(arg no-gui)"/>
        <!-- modify with path to world-->
        <arg name="world" value="$(find basic_controller)/worlds/test_world.wbt"/>
    </include>

    <arg name="auto-close" default="false" doc="Startup mode"/>
    <node name='controller' pkg='basic_controller' type='control.py' required='$(arg auto-close)'/>
</launch>
